<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Stars</th>
      <th>Review</th>
      <th>User</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews&.each do |review| %>
      <tr>
        <td><%= review.stars %></td>
        <td><%= review.review %></td>
        <td><%= review.user %></td>
        <td><%= review.movie&.name %></td>
        <td><%= link_to 'Show', movie_review_url(@movie, review) %></td>
        <td><%= link_to 'Edit', edit_movie_review_path(@movie, review) %></td>
        <td><%= link_to 'Destroy', [@movie, review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

